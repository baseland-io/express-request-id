{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "outDir": "dist",
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "baseUrl": "./src",
    "plugins": [{"transform": "typescript-transform-paths"}],
    "typeRoots": [
      "./src/types/**/*.d.ts",
      "node_modules/@types"
    ]
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts", "tests/**/*.ts"]
}
