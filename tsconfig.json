{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "dist",
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "types": ["node", "mocha", "chai"],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "ts-node": {
    "files": true
  },
  "files": [
    "index.d.ts"
  ],
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*.ts", "tests/**/*.ts", "./index.d.ts"]
}
